# configure a beaglebone (systemd) system to automatically start the ugear
# autopilot

cp bb-ugear.service /lib/systemd/

# note this needs to be a hard link, systemctl enable will refuse if it's a
# symbolic (-s) link.
ln /lib/systemd/bb-ugear.service /etc/systemd/system/

systemctl daemon-reload 
systemctl start bb-ugear.service 
systemctl enable bb-ugear.service
